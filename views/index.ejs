<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Todo list</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    </head>
    <body>
        <div class="container">
            <!-- Page Content goes here --> 
                <div class="row">
                    <div class="col s12">
                        <div class="card">
                            <div class="card-content">
                                <% if(error !== null){ %> 
                                <div class="row teal lighten-4">
                                    <div class="col s12">
                                    <p class="center-align"><%=
                                    error %></p>
                                    </div>
                            </div>
                            <% } %>
                            <span class="card-title">ToDo List</span>
                            <div class="row">
                                <form class="col s12" method="post" action="/">
                                <div class="input-field col s12">
                                    <input placeholder="Task" id="task" type="text" name="task">
                                    <label for="task">Insert Task</label>
                                </div>
                            </div>
                            <input class="btn" type="submit" value="Add task">
                        </form>
                        </div>
                        <div class="card-action"> 
                            <ul class="collection">
                            <% console.log(tasks) %>
                            <% tasks.forEach((task) => { %>
                                <li class="collection-item"><%= task.task %>
                                <a href="update-task/<%= task.id %>" class=
                                "secondary-content"><i class="material-icons">create
                                </i></a>   
                                <a href="delete-task/<%= task.id %>" class=
                                "secondary-content"><i class="material-icons">do_not_disturb
                                </i></a>
                                </li>
                            <% }) %>
                            </ul>
                            <a href="delete-all-tasks" class="btn">Delete all tasks</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Compiled and minified JavaScript -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    </body>
</html>